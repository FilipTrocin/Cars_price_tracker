#: import C kivy.utils.get_color_from_hex

<DailyPopup>
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        spacing: 18
        cols: 2

        AsyncImage:
            id: img
            source: root.daily
            allow_stretch: True
            size_hint: .9, 1
            pos_hint: {'x': 0, 'center_y': .5}

        Button:
            size_hint: .1, .2
            pos_hint: {'x': 5, 'center_y': .5}
            AsyncImage:
                source: root.button
                center_x: self.parent.center_x
                center_y: self.parent.center_y


    BoxLayout:
        size_hint: 1, .25
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            Label:
                text: "".join(root.analysis)
                font_size: 40
                size_hint: None, None
                size: self.texture_size


<SmoothInput@TextInput>
    TextInput:
        multiline: False
        font_size: 30



<SearchPerformer>
    GridLayout:
        size: root.size
        cols: 2
        rows: 3

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR MAKE"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crmk
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR MODEL"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crmd
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR YEAR"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: cryr
                    multiline: False
                    input_filter: 'int'
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR FUEL TYPE"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crft
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        FloatLayout:
            Button:
                text: 'Search'
                size_hint: .5, .4
                pos_hint: {"x": .75, "top": .9}
                border: 20, 20, 20, 20
                on_press: root.input_grabber(root.dt)
                on_release: root.hit_enter()
                on_release: root.clear()