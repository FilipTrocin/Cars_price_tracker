#: import C kivy.utils.get_color_from_hex

<PopupWindow>
    do_default_tab: False
    TabbedPanelItem:
        id: tab1
        text: 'Daily View'
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            FloatLayout:
                AsyncImage:
                    id: day
                    source: root.daily
                    nocache: True
                    allow_stretch: True
                    size_hint: .9, 1
                    pos_hint: {'x': .001, 'center_y': .5}

                Button:
                    id: forward
                    size_hint: .09, 1
                    pos_hint: {'x': .906,'center_y': .5}
                    on_press: root.go_forward()
                    Image:
                        source: root.right_b
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y


            FloatLayout:
                size_hint: 1, .25
                ScrollView:
                    pos_hint: {'x': .01, 'y': .1}
                    do_scroll_y: True
                    do_scroll_x: False
                    Label:
                        text: "".join(root.analysis)
                        font_size: 40
                        size_hint: None, None
                        size: self.texture_size


    TabbedPanelItem:
        id: tab2
        text: 'Weekly View'
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            FloatLayout:
                Button:
                    size_hint: .09, 1
                    pos_hint: {'x': .005,'center_y': .5}
                    on_release: root.go_backward()
                    Image:
                        source: root.left_b
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                AsyncImage:
                    id: week
                    source: root.weekly
                    nocache: True
                    allow_stretch: True
                    size_hint: .9, 1
                    pos_hint: {'x': .0827, 'center_y': .5}

            FloatLayout:
                size_hint: 1, .25
                ScrollView:
                    pos_hint: {'x': .01, 'y': .1}
                    do_scroll_y: True
                    do_scroll_x: False
                    Label:
                        text: "".join(root.analysis)
                        font_size: 40
                        size_hint: None, None
                        size: self.texture_size



<SmoothInput@TextInput>
    TextInput:
        multiline: False
        font_size: 30


<SearchPerformer>
    GridLayout:
        size: root.size
        cols: 2
        rows: 3

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR MAKE"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crmk
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR MODEL"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crmd
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR YEAR"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: cryr
                    multiline: False
                    input_filter: 'int'
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        BoxLayout:
            orientation: 'vertical'
            rows: 2
            cols: 1
            Label:
                text: "CAR FUEL TYPE"
                markup: True
                font_name: "Arial_Rounded_Bold"
                font_size: 60
                text_size: self.size
                valign: 'bottom'
                halign: 'center'

            FloatLayout:
                SmoothInput:
                    id: crft
                    multiline: False
                    size_hint: .8, .5
                    pos_hint: {"x": 0.1, "y": 0.5}
                    write_tab: False

        FloatLayout:
            Button:
                text: 'Search'
                size_hint: .5, .4
                pos_hint: {"x": .75, "top": .9}
                border: 20, 20, 20, 20
                on_press: root.input_grabber(root.dt)
                on_release: root.hit_enter()
                on_release: root.clear()