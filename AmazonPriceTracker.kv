#: import C kivy.utils.get_color_from_hex

<PopupWindow>
    FloatLayout:
        Label:
            text: "Nothing yet"
            pos_hint: {"center_x": 1.3, "center_y": .6}



<SearchPerformer>
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Label:
            id: text_lab
            text: "[color=808080]Type the name of the product:[/color]"
            markup: True
            font_name: "Arial_Rounded_Bold"
            font_size: 70
            pos_hint: {'top': 1.2}

        TextInput:
            pos: 120, 50
            size_hint: (.8, .2)
            font_size: 30
            background_color: C('#ff5722')
            border: (50, 50, 50, 50)
            multiline: False
            on_text_validate: root.hit_enter()



























