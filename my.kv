#: import C kivy.utils.get_color_from_hex

<CanvasWidget>
    rows: 2
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: C('#ff4d40')
        RoundedRectangle:
            size: (self.height  , self.height )
            pos: ((root.center_x/4)  , root.center_y / 3)


    Label:
        id: napis
        text: "[color=808080]Type the name of the product:[/color]"
        markup: True
        font_name: "Arial_Rounded_Bold"
        font_size: 65
        size: self.texture_size
        pos_hint: {"top": 1.1}





















